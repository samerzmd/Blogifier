@using Blogifier.Core.Common
@{
    var customFooter = "";
    try
    {
        var cf = Model.CustomFields;
        customFooter = (cf.ContainsKey(Constants.FooterCode) && !string.IsNullOrEmpty(cf[Constants.FooterCode])) ? cf[Constants.FooterCode] : "";
    }
    catch { }
}
<footer class="blog-footer">
    <div class="container">
        <p>Copyright © @DateTime.Now.Year @BlogSettings.Title.</p>
    </div>
</footer>
<form method="post" id="frmLogOut" asp-controller="Account" asp-action="Logout" asp-antiforgery="true"></form>
<script src="~/themes/onethree/js/jquery.min.js"></script>
<script src="~/themes/onethree/js/popper.min.js"></script>
<script src="~/themes/onethree/js/bootstrap.min.js"></script>
<script src="~/themes/onethree/js/prism.js"></script>
<script src="~/themes/onethree/js/blog.js" asp-append-version="true"></script>
@Html.Raw(customFooter)
